@model WebQuanAoDoAn.Models.LOAI_SP

@{
    ViewBag.Title = "themloaisp";
    Layout = "~/Views/Shared/layoutADMIN.cshtml";
}
<style>
    
    .cha-body h1 {
        margin-left: 600px;
    }

    .form-horizontal {
        margin-left: 500px;
    }

    .exit {
        margin-left: 600px;
    }
</style>
<div class="cha-body">
<h1>THÊM LOẠI SẢN PHẨM MỚI</h1>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.TEN_LOAI, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" required name="TEN_LOAI" id="TEN_LOAI" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div class="exit">
    @Html.ActionLink("Quay về", "QLloaisp", "Admin")
</div>
</div>
