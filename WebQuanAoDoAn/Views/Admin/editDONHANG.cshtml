@model WebQuanAoDoAn.Models.DON_DAT_HANG

@{
    ViewBag.Title = "editDONHANG";
    Layout = "~/Views/Shared/layoutADMIN.cshtml";
}

<h2>editDONHANG</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>DON_DAT_HANG</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MA_DON_HANG)

    <div class="form-group">
        @Html.LabelFor(model => model.MA_KH, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.MA_KH, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MA_KH, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NGAY_DAT, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="date" name="ngaydat" class="form-control" id="date-time" required value=" @String.Format("{0:yyyy-MM-dd}", Model.NGAY_DAT)">
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NGAY_GIAO, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            
            <input type="date" name="ngaygiao" class="form-control" id="date-time" required value=" @String.Format("{0:yyyy-MM-dd}", Model.NGAY_GIAO)">
        </div>
    </div>
   
    <div class="form-group">
        <label class="control-label col-md-2">Tình Trạng Thanh Toán</label>
        <div class="col-md-10">
           
            @if (Model.DA_THANH_TOAN == true)
            {
                <input checked="checked" name="tinhtrang" type="radio" value="True" /><span>Đã Thanh Toán</span>
                <input name="tinhtrang" type="radio" value="False"  /><span>Chưa Thanh toán</span>
            }
            else
            {
                <input name="tinhtrang" type="radio" value="True" /><span>Đã Thanh Toán</span>
                <input checked="checked" name="tinhtrang" type="radio" value="False"  /><span>Chưa Thanh Toán</span>
            }


        </div>
    </div>


   
    <div class="form-group">
        @Html.LabelFor(model => model.TINH_TRANG_GH, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @if (Model.TINH_TRANG_GH == true)
            {
                <input checked="checked" name="tinhtrangG" type="radio" value="True" /><span> Đã Giao </span>
                <input name="tinhtrangG" type="radio" value="False" /><span>Chưa Giao</span>
            }
            else
            {
                <input name="tinhtrangG" type="radio" value="True" /><span> Đã Giao</span>
                <input checked="checked" name="tinhtrangG" type="radio" value="False" /><span>Chưa Giao</span>
            }
        </div>
    </div>
   

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Quay Về", "QLDONHANG", "Admin")
</div>
