@model WebQuanAoDoAn.Models.HINH_ANH

@{
    ViewBag.Title = "ThemmoiIMAGESP";
    Layout = "~/Views/Shared/layoutADMIN.cshtml";
}
<style>
    #MA_SP {
        display: block;
        width: 100%;
        height: 34px;
        padding: 6px 12px;
        font-size: 14px;
        line-height: 1.42857143;
        color: #555555;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-shadow: inset 0 1px 1px rgb(0 0 0 / 8%);
    }

    .file1 {
        margin-bottom: 14px;
    }

    .cha-body h1 {
        margin-left: 600px;
    }

    .form-horizontal {
        margin-left: 500px;
    }

    .exit {
        margin-left: 600px;
    }
</style>
<div class="cha-body">
    <h1>THÊM MỚI IMAGE </h1>
    <hr />
    @using (Html.BeginForm("ThemmoiIMAGESP", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label class="control-label col-md-2"> TÊN SẢN PHẨM </label>
                <div class="col-md-10">
                    @Html.DropDownList("MA_SP")
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2"> HÌNH-SP</label>

                <div class="col-md-10">
                    <input type="file" name="fileupload" required />
                    @ViewBag.Thongbao
                </div>

            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div class="exit">
        @Html.ActionLink("Quay Về", "QLIMAGE", "Admin")
    </div>
</div>
